<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="#161719">

    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:background="@color/darkRed"
            android:layout_toRightOf="@+id/first_line"/>

        <View
            android:id="@+id/third_line"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_marginLeft="8dp"
            android:background="@color/white"
            android:layout_toRightOf="@+id/second_line"/>

        <View
            android:id="@+id/fourth_line"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:background="@color/darkRed"
            android:layout_toRightOf="@+id/third_line"/>

        <View
            android:id="@+id/fifth_line"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_marginLeft="8dp"
            android:background="#1AAD68"
            android:layout_toRightOf="@+id/fourth_line"/>

        <View
            android:id="@+id/sixth_line"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:background="@color/white"
            android:layout_toRightOf="@+id/fifth_line"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="15dp"
        android:id="@+id/R2"
        android:layout_below="@+id/R1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="CIRCLECROSS"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="120dp"
        android:layout_below="@+id/R2"
        android:id="@+id/R3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/stilda_script"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>



</RelativeLayout>